<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
         table, tr, td, th{
            border:solid black 1px;
        }
        tr, td, th {
            padding:10px;
            text-align: center;
        }
        ul{
            margin-bottom: 15px;
        }
        input{
            margin-bottom: 10px;
            padding: 10px;
        }
    </style>
    <title>Usu√°rios</title>
</head>
<body>
    <ul>
        <li><a href="/admin/usuario">Listar</a></li>
        <li><a href="/admin/usuario/add">Adicionar</a></li>
        <li><a href="/admin/sair">Sair</a></li>
    </ul>
    <form method="post">
        <input type="text" name="pesquisar" placeholder="Digite sua pesquisa!">
        <input type="submit" value="Pesquisar">
    </form>
    <table>
        <tr>
            <th>Id</th>
            <th>nome</th>
            <th>email</th>
            <th>senha</th>
            <th>foto</th>
            <th>edita</th>
            <th>deleta</th>
        </tr>
        <% Usuarios.forEach(function(usuario){ %>
        <tr>
            <td><%=usuario.id%></td>
            <td><%=usuario.nome%></td>
            <td><%=usuario.email%></td>
            <td><%=usuario.senha%></td>
            <td>
                <img src="/uploads/<%=usuario.foto%>" width="80px">                
            </td>
            <td>
                <a href="/admin/usuario/edt/<%=usuario.id%>">
                    <img src="/edit.png" width="50px">
                </a>
            </td>
            <td>
                <a href="/admin/usuario/del/<%=usuario.id%>">
                    <img src="/lixeira.png" width="50px">
                </a>
            </td>
        </tr>
        <% }) %>
    </table>
    <h2><%=msg%></h2>
</body>
</html>
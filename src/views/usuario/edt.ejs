    <style>
        table, tr, td, th{
            border:solid black 1px;
        }
        tr, td, th {
            padding:10px;
            text-align: center;
        }
        ul{
            margin-bottom: 15px;
        }
        input{
            margin-bottom: 10px;
            padding: 10px;
        }
        input[readonly]{
            background-color:gray;
        }
        img{
            max-height: 100px;
        }
    </style>
